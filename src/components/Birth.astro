---
const tabs = [
  { id: "day", name: "Сегодня" },
  { id: "soon", name: "Скоро" },
  { id: "month", name: "Месяц" },
  { id: "all", name: "Все" },
];
---

<section class="_container-x _container-y">
  <div class="border-b border-gray-500">
    <nav class="flex space-x-2" aria-label="Tabs" role="tablist">
      {
        tabs.map((tab, index) => (
          <button
            type="button"
            class="-mb-px py-3 px-3 inline-flex items-center gap-2 text-sm font-medium text-center border rounded-t-lg bg-gray-700 text-gray-300 hs-tab-active:bg-gray-800 hs-tab-active:text-gray-200 border-gray-500 hs-tab-active:border-b-transparent"
            class:list={`${index === 0 ? "active" : ""}`}
            id={`tab-${tab.id}`}
            data-hs-tab={`#tab-content-${tab.id}`}
            aria-controls={`tab-content-${tab.id}`}
            role="tab">
            {tab.name}
          </button>
        ))
      }
    </nav>
  </div>
  <div>
    {
      tabs.map((tab, index) => (
        <div
          id={`tab-content-${tab.id}`}
          class:list={`${index === 0 ? "" : "hidden"}`}
          aria-labelledby={`tab-${tab.id}`}
          role="tabpanel">
          <div id={tab.id}>
            {tab.id === "all" && (
              <div class="flex justify-between gap-2 mt-5 mb-1">
                <input
                  type="text"
                  class="search w-1/2 md:w-auto bg-gray-700 text-gray-300 placeholder-gray-400 border border-gray-500 rounded-md"
                  placeholder="Поиск..."
                />
                <div class="flex gap-2">
                  <button
                    type="button"
                    class="sort asc p-3 rounded-md text-sm font-semibold transition-all bg-blue-800 hover:bg-blue-700 text-gray-200"
                    data-sort="name">
                    Имя
                  </button>
                  <button
                    type="button"
                    class="sort p-3 rounded-md text-sm font-semibold transition-all bg-blue-800 hover:bg-blue-700 text-gray-200"
                    data-sort="iso">
                    Дата
                  </button>
                </div>
              </div>
            )}
            <div class="list text-gray-400" />
            {tab.id === "all" && (
              <ul class="pagination flex justify-center items-center space-x-2 py-10" />
            )}
          </div>
        </div>
      ))
    }
  </div>
</section>

<style>
  .sort.asc::after {
    content: "▲";
  }
  .sort.desc::after {
    content: "▼";
  }
</style>
